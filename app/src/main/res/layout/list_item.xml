    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/bendera"
        android:layout_width="90dp"
        android:layout_height="90dp"
        />
<TextView
    android:id="@+id/negara"
